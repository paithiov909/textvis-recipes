{
    "name": "${localWorkspaceFolderBasename}",
    "build": {
        "dockerfile": "Dockerfile",
        "args": {
            "VARIANT": "4"
        }
    },
    "features": {
        "ghcr.io/rocker-org/devcontainer-features/r-rig:1": {
            "version": "none",
            "installRadian": true,
            "installVscDebugger": false
        },
        "ghcr.io/rocker-org/devcontainer-features/quarto-cli:1": {}
    },
    "containerEnv": {
        "TZ": "Asia/Tokyo",
        "R_HISTSIZE": "200"
    }
}
